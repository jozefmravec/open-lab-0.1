using System;

namespace Povedz_dost
{
    class Program
    {
        public static int GetLegsCount(int chickens, int cows, int pigs)
        {
            int chickenlegs = chickens * 2;
            int cowlegs = cows * 4;
            int piglegs = pigs * 4;
            return (chickenlegs + cowlegs + piglegs);

        }
        static void Main(string[] args)
        {
            Console.WriteLine(GetLegsCount(2, 2 ,4));
        }
    }
}
